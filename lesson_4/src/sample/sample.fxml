<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
<Label fx:id="label1" text="Messages">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
</Label>
    <TextArea fx:id="msgList" editable="false" minHeight="400" />
    <TextField fx:id="msgField" onAction="#msgFieldClick" />
    <Button fx:id="sendMsgBtn" maxHeight="30" maxWidth="150" minHeight="30" minWidth="150" onAction="#sendMsgBtnClick" onMouseEntered="#sendMsgBtnEntered" onMouseExited="#sendMsgBtnExited" text="Send message" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
